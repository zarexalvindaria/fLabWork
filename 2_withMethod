import java.util.Scanner;

public class fLabWork2 {

	public static void main(String[] args) 
	{
		float numInputSum, numInput;
		
		numInputSum = 0;
		
		for (numInput = 1; numInput%10!=0; ++numInput)
		{ 
			Scanner in = new Scanner(System.in);
			System.out.print("Enter your lucky number: ");
			numInput = in.nextInt();
			numInputComputation(numInput, numInputSum);
		}
	}
	
	public static float numInputComputation(float numberInput, float numInputTotal)
	{
		if (numberInput%10==0)
		{
			System.out.println("Your input is divisible by 10.");
		}
		
		numInputTotal += numberInput;
		Scanner in = new Scanner(System.in);
		String continueOrNot;
		System.out.println("The sum of all your inputs is " + numInputTotal);
		System.out.print("\n");
		System.out.print("Would you like to try again? Please type YES OR NO: ");
		continueOrNot = in.nextLine();
		continueOrNot = continueOrNot.toUpperCase();
		
		if (continueOrNot.equals("YES"))
		{
			System.out.print("\n");
			main(null);
		}
		
		else
		{
			System.out.print("\n");
			 for (int i = 0; i < 10; i++) 
			 {
				   for (int j = 0; j < 10 - i; j++)
				    System.out.print(" ");
				   for (int k = 0; k < (2 * i + 1); k++)
				    System.out.print("*");
				   System.out.println();
			 }
			 System.out.println("      *       *       ");
			 System.out.println("      *       *       ");
			//return numberInput += numInputTotal;
		}
	return numInputTotal;
	}
}
