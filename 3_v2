import java.util.Scanner;
public class fTest1
{

	public static void main(String[] args) 
	{
		
		int inputTime = 5;
		int arrayNumbers[] = new int[inputTime];
		
		for (int index = 0; index < inputTime; index++)
		{
			Scanner in = new Scanner(System.in);
			
			System.out.print("Enter a number: ");
			arrayNumbers[index] = in.nextInt();
		}
		
		System.out.println("These are the even numbers:");
		for (int index = 0; index < arrayNumbers.length; index++)
		{
			if (arrayNumbers[index]%2== 0)
			{
				
				System.out.println(arrayNumbers[index]);
			}
		}
		
		System.out.println("These are the odd numbers:");
		for (int index = 0; index < arrayNumbers.length; index++)
		{
			if (arrayNumbers[index]%2!=0)
			{
				
				System.out.println(arrayNumbers[index]);
			}
		}
	}
	
}
