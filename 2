import java.util.Scanner;

public class fLabWork2 {

	public static void main(String[] args) 
	{
		float numInputSum, numInput;
		
		
		numInputSum = 0;
		
		for (numInput = 1; numInput%10!=0; numInput++)
		{ 
			Scanner in = new Scanner(System.in);
			System.out.print("Enter your lucky number: ");
			numInput = in.nextInt();
			
			//numInputComputation(numInput);
			
			if (numInput%10==0)
			{
				System.out.println("Your input is divisible by 10.");
				System.out.print("\n");
				break;
			}
			numInputSum += numInput;
		}
		Scanner in = new Scanner(System.in);
		String continueOrNot;
		System.out.println("The sum of all your inputs is " + numInputSum);
		System.out.print("\n");
		System.out.println("Would you like to try again? Please type YES OR NO: ");
		continueOrNot = in.nextLine();
		continueOrNot = continueOrNot.toUpperCase();
		
		if (continueOrNot.equals("YES"))
		{
			System.out.print("\n");
			main(null);
		}
		
		else
		{
			 for (int i = 0; i < 10; i++) 
			 {
				   for (int j = 0; j < 10 - i; j++)
				    System.out.print(" ");
				   for (int k = 0; k < (2 * i + 1); k++)
				    System.out.print("*");
				   System.out.println();
			 }
		}

	}
	
	/*public static float numInputComputation(float numberInput)
	{
		if (numberInput%10==0)
		{
			System.out.println("Your input is divisible by 10.");
		}
		
		return numberInput;
	}*/
}
