import java.util.Scanner;

public class flabWork1
{

	public static void main(String[] args) 
	{
		Scanner input = new Scanner(System.in);
		int gradeInput, gradeAccept;
		gradeAccept = 21;
		
		for(int gradeVal = 1; gradeVal < gradeAccept; gradeVal++)
			{	
				System.out.print("Please input your Grade: ");
				gradeInput = input.nextInt();
				if (gradeInput > 50)
					{
						main(null);
					}
				
				else
					{
						break;
					}
				
				int total;
				total = 0;
				gradeInput += gradeInput;
				float gradeAverage;
				gradeAverage = (gradeInput/gradeAccept);
				
				System.out.print("The average of your grade inputs is " + gradeAverage + ".");
				break;
			};
	}

}
